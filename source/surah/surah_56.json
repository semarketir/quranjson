{
    "index": "056",
    "name": "al-Waqi'ah",
    "verse": {
        "verse_0": "بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ",
        "verse_1": "إِذَا وَقَعَتِ الْوَاقِعَةُ",
        "verse_2": "لَيْسَ لِوَقْعَتِهَا كَاذِبَةٌ",
        "verse_3": "خَافِضَةٌ رَافِعَةٌ",
        "verse_4": "إِذَا رُجَّتِ الْأَرْضُ رَجًّا",
        "verse_5": "وَبُسَّتِ الْجِبَالُ بَسًّا",
        "verse_6": "فَكَانَتْ هَبَاءً مُنْبَثًّا",
        "verse_7": "وَكُنْتُمْ أَزْوَاجًا ثَلَاثَةً",
        "verse_8": "فَأَصْحَابُ الْمَيْمَنَةِ مَا أَصْحَابُ الْمَيْمَنَةِ",
        "verse_9": "وَأَصْحَابُ الْمَشْأَمَةِ مَا أَصْحَابُ الْمَشْأَمَةِ",
        "verse_10": "وَالسَّابِقُونَ السَّابِقُونَ",
        "verse_11": "أُولَٰئِكَ الْمُقَرَّبُونَ",
        "verse_12": "فِي جَنَّاتِ النَّعِيمِ",
        "verse_13": "ثُلَّةٌ مِنَ الْأَوَّلِينَ",
        "verse_14": "وَقَلِيلٌ مِنَ الْآخِرِينَ",
        "verse_15": "عَلَىٰ سُرُرٍ مَوْضُونَةٍ",
        "verse_16": "مُتَّكِئِينَ عَلَيْهَا مُتَقَابِلِينَ",
        "verse_17": "يَطُوفُ عَلَيْهِمْ وِلْدَانٌ مُخَلَّدُونَ",
        "verse_18": "بِأَكْوَابٍ وَأَبَارِيقَ وَكَأْسٍ مِنْ مَعِينٍ",
        "verse_19": "لَا يُصَدَّعُونَ عَنْهَا وَلَا يُنْزِفُونَ",
        "verse_20": "وَفَاكِهَةٍ مِمَّا يَتَخَيَّرُونَ",
        "verse_21": "وَلَحْمِ طَيْرٍ مِمَّا يَشْتَهُونَ",
        "verse_22": "وَحُورٌ عِينٌ",
        "verse_23": "كَأَمْثَالِ اللُّؤْلُؤِ الْمَكْنُونِ",
        "verse_24": "جَزَاءً بِمَا كَانُوا يَعْمَلُونَ",
        "verse_25": "لَا يَسْمَعُونَ فِيهَا لَغْوًا وَلَا تَأْثِيمًا",
        "verse_26": "إِلَّا قِيلًا سَلَامًا سَلَامًا",
        "verse_27": "وَأَصْحَابُ الْيَمِينِ مَا أَصْحَابُ الْيَمِينِ",
        "verse_28": "فِي سِدْرٍ مَخْضُودٍ",
        "verse_29": "وَطَلْحٍ مَنْضُودٍ",
        "verse_30": "وَظِلٍّ مَمْدُودٍ",
        "verse_31": "وَمَاءٍ مَسْكُوبٍ",
        "verse_32": "وَفَاكِهَةٍ كَثِيرَةٍ",
        "verse_33": "لَا مَقْطُوعَةٍ وَلَا مَمْنُوعَةٍ",
        "verse_34": "وَفُرُشٍ مَرْفُوعَةٍ",
        "verse_35": "إِنَّا أَنْشَأْنَاهُنَّ إِنْشَاءً",
        "verse_36": "فَجَعَلْنَاهُنَّ أَبْكَارًا",
        "verse_37": "عُرُبًا أَتْرَابًا",
        "verse_38": "لِأَصْحَابِ الْيَمِينِ",
        "verse_39": "ثُلَّةٌ مِنَ الْأَوَّلِينَ",
        "verse_40": "وَثُلَّةٌ مِنَ الْآخِرِينَ",
        "verse_41": "وَأَصْحَابُ الشِّمَالِ مَا أَصْحَابُ الشِّمَالِ",
        "verse_42": "فِي سَمُومٍ وَحَمِيمٍ",
        "verse_43": "وَظِلٍّ مِنْ يَحْمُومٍ",
        "verse_44": "لَا بَارِدٍ وَلَا كَرِيمٍ",
        "verse_45": "إِنَّهُمْ كَانُوا قَبْلَ ذَٰلِكَ مُتْرَفِينَ",
        "verse_46": "وَكَانُوا يُصِرُّونَ عَلَى الْحِنْثِ الْعَظِيمِ",
        "verse_47": "وَكَانُوا يَقُولُونَ أَئِذَا مِتْنَا وَكُنَّا تُرَابًا وَعِظَامًا أَإِنَّا لَمَبْعُوثُونَ",
        "verse_48": "أَوَآبَاؤُنَا الْأَوَّلُونَ",
        "verse_49": "قُلْ إِنَّ الْأَوَّلِينَ وَالْآخِرِينَ",
        "verse_50": "لَمَجْمُوعُونَ إِلَىٰ مِيقَاتِ يَوْمٍ مَعْلُومٍ",
        "verse_51": "ثُمَّ إِنَّكُمْ أَيُّهَا الضَّالُّونَ الْمُكَذِّبُونَ",
        "verse_52": "لَآكِلُونَ مِنْ شَجَرٍ مِنْ زَقُّومٍ",
        "verse_53": "فَمَالِئُونَ مِنْهَا الْبُطُونَ",
        "verse_54": "فَشَارِبُونَ عَلَيْهِ مِنَ الْحَمِيمِ",
        "verse_55": "فَشَارِبُونَ شُرْبَ الْهِيمِ",
        "verse_56": "هَٰذَا نُزُلُهُمْ يَوْمَ الدِّينِ",
        "verse_57": "نَحْنُ خَلَقْنَاكُمْ فَلَوْلَا تُصَدِّقُونَ",
        "verse_58": "أَفَرَأَيْتُمْ مَا تُمْنُونَ",
        "verse_59": "أَأَنْتُمْ تَخْلُقُونَهُ أَمْ نَحْنُ الْخَالِقُونَ",
        "verse_60": "نَحْنُ قَدَّرْنَا بَيْنَكُمُ الْمَوْتَ وَمَا نَحْنُ بِمَسْبُوقِينَ",
        "verse_61": "عَلَىٰ أَنْ نُبَدِّلَ أَمْثَالَكُمْ وَنُنْشِئَكُمْ فِي مَا لَا تَعْلَمُونَ",
        "verse_62": "وَلَقَدْ عَلِمْتُمُ النَّشْأَةَ الْأُولَىٰ فَلَوْلَا تَذَكَّرُونَ",
        "verse_63": "أَفَرَأَيْتُمْ مَا تَحْرُثُونَ",
        "verse_64": "أَأَنْتُمْ تَزْرَعُونَهُ أَمْ نَحْنُ الزَّارِعُونَ",
        "verse_65": "لَوْ نَشَاءُ لَجَعَلْنَاهُ حُطَامًا فَظَلْتُمْ تَفَكَّهُونَ",
        "verse_66": "إِنَّا لَمُغْرَمُونَ",
        "verse_67": "بَلْ نَحْنُ مَحْرُومُونَ",
        "verse_68": "أَفَرَأَيْتُمُ الْمَاءَ الَّذِي تَشْرَبُونَ",
        "verse_69": "أَأَنْتُمْ أَنْزَلْتُمُوهُ مِنَ الْمُزْنِ أَمْ نَحْنُ الْمُنْزِلُونَ",
        "verse_70": "لَوْ نَشَاءُ جَعَلْنَاهُ أُجَاجًا فَلَوْلَا تَشْكُرُونَ",
        "verse_71": "أَفَرَأَيْتُمُ النَّارَ الَّتِي تُورُونَ",
        "verse_72": "أَأَنْتُمْ أَنْشَأْتُمْ شَجَرَتَهَا أَمْ نَحْنُ الْمُنْشِئُونَ",
        "verse_73": "نَحْنُ جَعَلْنَاهَا تَذْكِرَةً وَمَتَاعًا لِلْمُقْوِينَ",
        "verse_74": "فَسَبِّحْ بِاسْمِ رَبِّكَ الْعَظِيمِ",
        "verse_75": "۞ فَلَا أُقْسِمُ بِمَوَاقِعِ النُّجُومِ",
        "verse_76": "وَإِنَّهُ لَقَسَمٌ لَوْ تَعْلَمُونَ عَظِيمٌ",
        "verse_77": "إِنَّهُ لَقُرْآنٌ كَرِيمٌ",
        "verse_78": "فِي كِتَابٍ مَكْنُونٍ",
        "verse_79": "لَا يَمَسُّهُ إِلَّا الْمُطَهَّرُونَ",
        "verse_80": "تَنْزِيلٌ مِنْ رَبِّ الْعَالَمِينَ",
        "verse_81": "أَفَبِهَٰذَا الْحَدِيثِ أَنْتُمْ مُدْهِنُونَ",
        "verse_82": "وَتَجْعَلُونَ رِزْقَكُمْ أَنَّكُمْ تُكَذِّبُونَ",
        "verse_83": "فَلَوْلَا إِذَا بَلَغَتِ الْحُلْقُومَ",
        "verse_84": "وَأَنْتُمْ حِينَئِذٍ تَنْظُرُونَ",
        "verse_85": "وَنَحْنُ أَقْرَبُ إِلَيْهِ مِنْكُمْ وَلَٰكِنْ لَا تُبْصِرُونَ",
        "verse_86": "فَلَوْلَا إِنْ كُنْتُمْ غَيْرَ مَدِينِينَ",
        "verse_87": "تَرْجِعُونَهَا إِنْ كُنْتُمْ صَادِقِينَ",
        "verse_88": "فَأَمَّا إِنْ كَانَ مِنَ الْمُقَرَّبِينَ",
        "verse_89": "فَرَوْحٌ وَرَيْحَانٌ وَجَنَّتُ نَعِيمٍ",
        "verse_90": "وَأَمَّا إِنْ كَانَ مِنْ أَصْحَابِ الْيَمِينِ",
        "verse_91": "فَسَلَامٌ لَكَ مِنْ أَصْحَابِ الْيَمِينِ",
        "verse_92": "وَأَمَّا إِنْ كَانَ مِنَ الْمُكَذِّبِينَ الضَّالِّينَ",
        "verse_93": "فَنُزُلٌ مِنْ حَمِيمٍ",
        "verse_94": "وَتَصْلِيَةُ جَحِيمٍ",
        "verse_95": "إِنَّ هَٰذَا لَهُوَ حَقُّ الْيَقِينِ",
        "verse_96": "فَسَبِّحْ بِاسْمِ رَبِّكَ الْعَظِيمِ"
    },
