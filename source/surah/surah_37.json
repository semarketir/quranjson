{
    "index": "037",
    "name": "as-Shaffat",
    "verse": {
        "verse_0": "بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ",
        "verse_1": "وَالصَّافَّاتِ صَفًّا",
        "verse_2": "فَالزَّاجِرَاتِ زَجْرًا",
        "verse_3": "فَالتَّالِيَاتِ ذِكْرًا",
        "verse_4": "إِنَّ إِلَٰهَكُمْ لَوَاحِدٌ",
        "verse_5": "رَبُّ السَّمَاوَاتِ وَالْأَرْضِ وَمَا بَيْنَهُمَا وَرَبُّ الْمَشَارِقِ",
        "verse_6": "إِنَّا زَيَّنَّا السَّمَاءَ الدُّنْيَا بِزِينَةٍ الْكَوَاكِبِ",
        "verse_7": "وَحِفْظًا مِنْ كُلِّ شَيْطَانٍ مَارِدٍ",
        "verse_8": "لَا يَسَّمَّعُونَ إِلَى الْمَلَإِ الْأَعْلَىٰ وَيُقْذَفُونَ مِنْ كُلِّ جَانِبٍ",
        "verse_9": "دُحُورًا ۖ وَلَهُمْ عَذَابٌ وَاصِبٌ",
        "verse_10": "إِلَّا مَنْ خَطِفَ الْخَطْفَةَ فَأَتْبَعَهُ شِهَابٌ ثَاقِبٌ",
        "verse_11": "فَاسْتَفْتِهِمْ أَهُمْ أَشَدُّ خَلْقًا أَمْ مَنْ خَلَقْنَا ۚ إِنَّا خَلَقْنَاهُمْ مِنْ طِينٍ لَازِبٍ",
        "verse_12": "بَلْ عَجِبْتَ وَيَسْخَرُونَ",
        "verse_13": "وَإِذَا ذُكِّرُوا لَا يَذْكُرُونَ",
        "verse_14": "وَإِذَا رَأَوْا آيَةً يَسْتَسْخِرُونَ",
        "verse_15": "وَقَالُوا إِنْ هَٰذَا إِلَّا سِحْرٌ مُبِينٌ",
        "verse_16": "أَإِذَا مِتْنَا وَكُنَّا تُرَابًا وَعِظَامًا أَإِنَّا لَمَبْعُوثُونَ",
        "verse_17": "أَوَآبَاؤُنَا الْأَوَّلُونَ",
        "verse_18": "قُلْ نَعَمْ وَأَنْتُمْ دَاخِرُونَ",
        "verse_19": "فَإِنَّمَا هِيَ زَجْرَةٌ وَاحِدَةٌ فَإِذَا هُمْ يَنْظُرُونَ",
        "verse_20": "وَقَالُوا يَا وَيْلَنَا هَٰذَا يَوْمُ الدِّينِ",
        "verse_21": "هَٰذَا يَوْمُ الْفَصْلِ الَّذِي كُنْتُمْ بِهِ تُكَذِّبُونَ",
        "verse_22": "۞ احْشُرُوا الَّذِينَ ظَلَمُوا وَأَزْوَاجَهُمْ وَمَا كَانُوا يَعْبُدُونَ",
        "verse_23": "مِنْ دُونِ اللَّهِ فَاهْدُوهُمْ إِلَىٰ صِرَاطِ الْجَحِيمِ",
        "verse_24": "وَقِفُوهُمْ ۖ إِنَّهُمْ مَسْئُولُونَ",
        "verse_25": "مَا لَكُمْ لَا تَنَاصَرُونَ",
        "verse_26": "بَلْ هُمُ الْيَوْمَ مُسْتَسْلِمُونَ",
        "verse_27": "وَأَقْبَلَ بَعْضُهُمْ عَلَىٰ بَعْضٍ يَتَسَاءَلُونَ",
        "verse_28": "قَالُوا إِنَّكُمْ كُنْتُمْ تَأْتُونَنَا عَنِ الْيَمِينِ",
        "verse_29": "قَالُوا بَلْ لَمْ تَكُونُوا مُؤْمِنِينَ",
        "verse_30": "وَمَا كَانَ لَنَا عَلَيْكُمْ مِنْ سُلْطَانٍ ۖ بَلْ كُنْتُمْ قَوْمًا طَاغِينَ",
        "verse_31": "فَحَقَّ عَلَيْنَا قَوْلُ رَبِّنَا ۖ إِنَّا لَذَائِقُونَ",
        "verse_32": "فَأَغْوَيْنَاكُمْ إِنَّا كُنَّا غَاوِينَ",
        "verse_33": "فَإِنَّهُمْ يَوْمَئِذٍ فِي الْعَذَابِ مُشْتَرِكُونَ",
        "verse_34": "إِنَّا كَذَٰلِكَ نَفْعَلُ بِالْمُجْرِمِينَ",
        "verse_35": "إِنَّهُمْ كَانُوا إِذَا قِيلَ لَهُمْ لَا إِلَٰهَ إِلَّا اللَّهُ يَسْتَكْبِرُونَ",
        "verse_36": "وَيَقُولُونَ أَئِنَّا لَتَارِكُو آلِهَتِنَا لِشَاعِرٍ مَجْنُونٍ",
        "verse_37": "بَلْ جَاءَ بِالْحَقِّ وَصَدَّقَ الْمُرْسَلِينَ",
        "verse_38": "إِنَّكُمْ لَذَائِقُو الْعَذَابِ الْأَلِيمِ",
        "verse_39": "وَمَا تُجْزَوْنَ إِلَّا مَا كُنْتُمْ تَعْمَلُونَ",
        "verse_40": "إِلَّا عِبَادَ اللَّهِ الْمُخْلَصِينَ",
        "verse_41": "أُولَٰئِكَ لَهُمْ رِزْقٌ مَعْلُومٌ",
        "verse_42": "فَوَاكِهُ ۖ وَهُمْ مُكْرَمُونَ",
        "verse_43": "فِي جَنَّاتِ النَّعِيمِ",
        "verse_44": "عَلَىٰ سُرُرٍ مُتَقَابِلِينَ",
        "verse_45": "يُطَافُ عَلَيْهِمْ بِكَأْسٍ مِنْ مَعِينٍ",
        "verse_46": "بَيْضَاءَ لَذَّةٍ لِلشَّارِبِينَ",
        "verse_47": "لَا فِيهَا غَوْلٌ وَلَا هُمْ عَنْهَا يُنْزَفُونَ",
        "verse_48": "وَعِنْدَهُمْ قَاصِرَاتُ الطَّرْفِ عِينٌ",
        "verse_49": "كَأَنَّهُنَّ بَيْضٌ مَكْنُونٌ",
        "verse_50": "فَأَقْبَلَ بَعْضُهُمْ عَلَىٰ بَعْضٍ يَتَسَاءَلُونَ",
        "verse_51": "قَالَ قَائِلٌ مِنْهُمْ إِنِّي كَانَ لِي قَرِينٌ",
        "verse_52": "يَقُولُ أَإِنَّكَ لَمِنَ الْمُصَدِّقِينَ",
        "verse_53": "أَإِذَا مِتْنَا وَكُنَّا تُرَابًا وَعِظَامًا أَإِنَّا لَمَدِينُونَ",
        "verse_54": "قَالَ هَلْ أَنْتُمْ مُطَّلِعُونَ",
        "verse_55": "فَاطَّلَعَ فَرَآهُ فِي سَوَاءِ الْجَحِيمِ",
        "verse_56": "قَالَ تَاللَّهِ إِنْ كِدْتَ لَتُرْدِينِ",
        "verse_57": "وَلَوْلَا نِعْمَةُ رَبِّي لَكُنْتُ مِنَ الْمُحْضَرِينَ",
        "verse_58": "أَفَمَا نَحْنُ بِمَيِّتِينَ",
        "verse_59": "إِلَّا مَوْتَتَنَا الْأُولَىٰ وَمَا نَحْنُ بِمُعَذَّبِينَ",
        "verse_60": "إِنَّ هَٰذَا لَهُوَ الْفَوْزُ الْعَظِيمُ",
        "verse_61": "لِمِثْلِ هَٰذَا فَلْيَعْمَلِ الْعَامِلُونَ",
        "verse_62": "أَذَٰلِكَ خَيْرٌ نُزُلًا أَمْ شَجَرَةُ الزَّقُّومِ",
        "verse_63": "إِنَّا جَعَلْنَاهَا فِتْنَةً لِلظَّالِمِينَ",
        "verse_64": "إِنَّهَا شَجَرَةٌ تَخْرُجُ فِي أَصْلِ الْجَحِيمِ",
        "verse_65": "طَلْعُهَا كَأَنَّهُ رُءُوسُ الشَّيَاطِينِ",
        "verse_66": "فَإِنَّهُمْ لَآكِلُونَ مِنْهَا فَمَالِئُونَ مِنْهَا الْبُطُونَ",
        "verse_67": "ثُمَّ إِنَّ لَهُمْ عَلَيْهَا لَشَوْبًا مِنْ حَمِيمٍ",
        "verse_68": "ثُمَّ إِنَّ مَرْجِعَهُمْ لَإِلَى الْجَحِيمِ",
        "verse_69": "إِنَّهُمْ أَلْفَوْا آبَاءَهُمْ ضَالِّينَ",
        "verse_70": "فَهُمْ عَلَىٰ آثَارِهِمْ يُهْرَعُونَ",
        "verse_71": "وَلَقَدْ ضَلَّ قَبْلَهُمْ أَكْثَرُ الْأَوَّلِينَ",
        "verse_72": "وَلَقَدْ أَرْسَلْنَا فِيهِمْ مُنْذِرِينَ",
        "verse_73": "فَانْظُرْ كَيْفَ كَانَ عَاقِبَةُ الْمُنْذَرِينَ",
        "verse_74": "إِلَّا عِبَادَ اللَّهِ الْمُخْلَصِينَ",
        "verse_75": "وَلَقَدْ نَادَانَا نُوحٌ فَلَنِعْمَ الْمُجِيبُونَ",
        "verse_76": "وَنَجَّيْنَاهُ وَأَهْلَهُ مِنَ الْكَرْبِ الْعَظِيمِ",
        "verse_77": "وَجَعَلْنَا ذُرِّيَّتَهُ هُمُ الْبَاقِينَ",
        "verse_78": "وَتَرَكْنَا عَلَيْهِ فِي الْآخِرِينَ",
        "verse_79": "سَلَامٌ عَلَىٰ نُوحٍ فِي الْعَالَمِينَ",
        "verse_80": "إِنَّا كَذَٰلِكَ نَجْزِي الْمُحْسِنِينَ",
        "verse_81": "إِنَّهُ مِنْ عِبَادِنَا الْمُؤْمِنِينَ",
        "verse_82": "ثُمَّ أَغْرَقْنَا الْآخَرِينَ",
        "verse_83": "۞ وَإِنَّ مِنْ شِيعَتِهِ لَإِبْرَاهِيمَ",
        "verse_84": "إِذْ جَاءَ رَبَّهُ بِقَلْبٍ سَلِيمٍ",
        "verse_85": "إِذْ قَالَ لِأَبِيهِ وَقَوْمِهِ مَاذَا تَعْبُدُونَ",
        "verse_86": "أَئِفْكًا آلِهَةً دُونَ اللَّهِ تُرِيدُونَ",
        "verse_87": "فَمَا ظَنُّكُمْ بِرَبِّ الْعَالَمِينَ",
        "verse_88": "فَنَظَرَ نَظْرَةً فِي النُّجُومِ",
        "verse_89": "فَقَالَ إِنِّي سَقِيمٌ",
        "verse_90": "فَتَوَلَّوْا عَنْهُ مُدْبِرِينَ",
        "verse_91": "فَرَاغَ إِلَىٰ آلِهَتِهِمْ فَقَالَ أَلَا تَأْكُلُونَ",
        "verse_92": "مَا لَكُمْ لَا تَنْطِقُونَ",
        "verse_93": "فَرَاغَ عَلَيْهِمْ ضَرْبًا بِالْيَمِينِ",
        "verse_94": "فَأَقْبَلُوا إِلَيْهِ يَزِفُّونَ",
        "verse_95": "قَالَ أَتَعْبُدُونَ مَا تَنْحِتُونَ",
        "verse_96": "وَاللَّهُ خَلَقَكُمْ وَمَا تَعْمَلُونَ",
        "verse_97": "قَالُوا ابْنُوا لَهُ بُنْيَانًا فَأَلْقُوهُ فِي الْجَحِيمِ",
        "verse_98": "فَأَرَادُوا بِهِ كَيْدًا فَجَعَلْنَاهُمُ الْأَسْفَلِينَ",
        "verse_99": "وَقَالَ إِنِّي ذَاهِبٌ إِلَىٰ رَبِّي سَيَهْدِينِ",
        "verse_100": "رَبِّ هَبْ لِي مِنَ الصَّالِحِينَ",
        "verse_101": "فَبَشَّرْنَاهُ بِغُلَامٍ حَلِيمٍ",
        "verse_102": "فَلَمَّا بَلَغَ مَعَهُ السَّعْيَ قَالَ يَا بُنَيَّ إِنِّي أَرَىٰ فِي الْمَنَامِ أَنِّي أَذْبَحُكَ فَانْظُرْ مَاذَا تَرَىٰ ۚ قَالَ يَا أَبَتِ افْعَلْ مَا تُؤْمَرُ ۖ سَتَجِدُنِي إِنْ شَاءَ اللَّهُ مِنَ الصَّابِرِينَ",
        "verse_103": "فَلَمَّا أَسْلَمَا وَتَلَّهُ لِلْجَبِينِ",
        "verse_104": "وَنَادَيْنَاهُ أَنْ يَا إِبْرَاهِيمُ",
        "verse_105": "قَدْ صَدَّقْتَ الرُّؤْيَا ۚ إِنَّا كَذَٰلِكَ نَجْزِي الْمُحْسِنِينَ",
        "verse_106": "إِنَّ هَٰذَا لَهُوَ الْبَلَاءُ الْمُبِينُ",
        "verse_107": "وَفَدَيْنَاهُ بِذِبْحٍ عَظِيمٍ",
        "verse_108": "وَتَرَكْنَا عَلَيْهِ فِي الْآخِرِينَ",
        "verse_109": "سَلَامٌ عَلَىٰ إِبْرَاهِيمَ",
        "verse_110": "كَذَٰلِكَ نَجْزِي الْمُحْسِنِينَ",
        "verse_111": "إِنَّهُ مِنْ عِبَادِنَا الْمُؤْمِنِينَ",
        "verse_112": "وَبَشَّرْنَاهُ بِإِسْحَاقَ نَبِيًّا مِنَ الصَّالِحِينَ",
        "verse_113": "وَبَارَكْنَا عَلَيْهِ وَعَلَىٰ إِسْحَاقَ ۚ وَمِنْ ذُرِّيَّتِهِمَا مُحْسِنٌ وَظَالِمٌ لِنَفْسِهِ مُبِينٌ",
        "verse_114": "وَلَقَدْ مَنَنَّا عَلَىٰ مُوسَىٰ وَهَارُونَ",
        "verse_115": "وَنَجَّيْنَاهُمَا وَقَوْمَهُمَا مِنَ الْكَرْبِ الْعَظِيمِ",
        "verse_116": "وَنَصَرْنَاهُمْ فَكَانُوا هُمُ الْغَالِبِينَ",
        "verse_117": "وَآتَيْنَاهُمَا الْكِتَابَ الْمُسْتَبِينَ",
        "verse_118": "وَهَدَيْنَاهُمَا الصِّرَاطَ الْمُسْتَقِيمَ",
        "verse_119": "وَتَرَكْنَا عَلَيْهِمَا فِي الْآخِرِينَ",
        "verse_120": "سَلَامٌ عَلَىٰ مُوسَىٰ وَهَارُونَ",
        "verse_121": "إِنَّا كَذَٰلِكَ نَجْزِي الْمُحْسِنِينَ",
        "verse_122": "إِنَّهُمَا مِنْ عِبَادِنَا الْمُؤْمِنِينَ",
        "verse_123": "وَإِنَّ إِلْيَاسَ لَمِنَ الْمُرْسَلِينَ",
        "verse_124": "إِذْ قَالَ لِقَوْمِهِ أَلَا تَتَّقُونَ",
        "verse_125": "أَتَدْعُونَ بَعْلًا وَتَذَرُونَ أَحْسَنَ الْخَالِقِينَ",
        "verse_126": "اللَّهَ رَبَّكُمْ وَرَبَّ آبَائِكُمُ الْأَوَّلِينَ",
        "verse_127": "فَكَذَّبُوهُ فَإِنَّهُمْ لَمُحْضَرُونَ",
        "verse_128": "إِلَّا عِبَادَ اللَّهِ الْمُخْلَصِينَ",
        "verse_129": "وَتَرَكْنَا عَلَيْهِ فِي الْآخِرِينَ",
        "verse_130": "سَلَامٌ عَلَىٰ إِلْ يَاسِينَ",
        "verse_131": "إِنَّا كَذَٰلِكَ نَجْزِي الْمُحْسِنِينَ",
        "verse_132": "إِنَّهُ مِنْ عِبَادِنَا الْمُؤْمِنِينَ",
        "verse_133": "وَإِنَّ لُوطًا لَمِنَ الْمُرْسَلِينَ",
        "verse_134": "إِذْ نَجَّيْنَاهُ وَأَهْلَهُ أَجْمَعِينَ",
        "verse_135": "إِلَّا عَجُوزًا فِي الْغَابِرِينَ",
        "verse_136": "ثُمَّ دَمَّرْنَا الْآخَرِينَ",
        "verse_137": "وَإِنَّكُمْ لَتَمُرُّونَ عَلَيْهِمْ مُصْبِحِينَ",
        "verse_138": "وَبِاللَّيْلِ ۗ أَفَلَا تَعْقِلُونَ",
        "verse_139": "وَإِنَّ يُونُسَ لَمِنَ الْمُرْسَلِينَ",
        "verse_140": "إِذْ أَبَقَ إِلَى الْفُلْكِ الْمَشْحُونِ",
        "verse_141": "فَسَاهَمَ فَكَانَ مِنَ الْمُدْحَضِينَ",
        "verse_142": "فَالْتَقَمَهُ الْحُوتُ وَهُوَ مُلِيمٌ",
        "verse_143": "فَلَوْلَا أَنَّهُ كَانَ مِنَ الْمُسَبِّحِينَ",
        "verse_144": "لَلَبِثَ فِي بَطْنِهِ إِلَىٰ يَوْمِ يُبْعَثُونَ",
        "verse_145": "۞ فَنَبَذْنَاهُ بِالْعَرَاءِ وَهُوَ سَقِيمٌ",
        "verse_146": "وَأَنْبَتْنَا عَلَيْهِ شَجَرَةً مِنْ يَقْطِينٍ",
        "verse_147": "وَأَرْسَلْنَاهُ إِلَىٰ مِائَةِ أَلْفٍ أَوْ يَزِيدُونَ",
        "verse_148": "فَآمَنُوا فَمَتَّعْنَاهُمْ إِلَىٰ حِينٍ",
        "verse_149": "فَاسْتَفْتِهِمْ أَلِرَبِّكَ الْبَنَاتُ وَلَهُمُ الْبَنُونَ",
        "verse_150": "أَمْ خَلَقْنَا الْمَلَائِكَةَ إِنَاثًا وَهُمْ شَاهِدُونَ",
        "verse_151": "أَلَا إِنَّهُمْ مِنْ إِفْكِهِمْ لَيَقُولُونَ",
        "verse_152": "وَلَدَ اللَّهُ وَإِنَّهُمْ لَكَاذِبُونَ",
        "verse_153": "أَصْطَفَى الْبَنَاتِ عَلَى الْبَنِينَ",
        "verse_154": "مَا لَكُمْ كَيْفَ تَحْكُمُونَ",
        "verse_155": "أَفَلَا تَذَكَّرُونَ",
        "verse_156": "أَمْ لَكُمْ سُلْطَانٌ مُبِينٌ",
        "verse_157": "فَأْتُوا بِكِتَابِكُمْ إِنْ كُنْتُمْ صَادِقِينَ",
        "verse_158": "وَجَعَلُوا بَيْنَهُ وَبَيْنَ الْجِنَّةِ نَسَبًا ۚ وَلَقَدْ عَلِمَتِ الْجِنَّةُ إِنَّهُمْ لَمُحْضَرُونَ",
        "verse_159": "سُبْحَانَ اللَّهِ عَمَّا يَصِفُونَ",
        "verse_160": "إِلَّا عِبَادَ اللَّهِ الْمُخْلَصِينَ",
        "verse_161": "فَإِنَّكُمْ وَمَا تَعْبُدُونَ",
        "verse_162": "مَا أَنْتُمْ عَلَيْهِ بِفَاتِنِينَ",
        "verse_163": "إِلَّا مَنْ هُوَ صَالِ الْجَحِيمِ",
        "verse_164": "وَمَا مِنَّا إِلَّا لَهُ مَقَامٌ مَعْلُومٌ",
        "verse_165": "وَإِنَّا لَنَحْنُ الصَّافُّونَ",
        "verse_166": "وَإِنَّا لَنَحْنُ الْمُسَبِّحُونَ",
        "verse_167": "وَإِنْ كَانُوا لَيَقُولُونَ",
        "verse_168": "لَوْ أَنَّ عِنْدَنَا ذِكْرًا مِنَ الْأَوَّلِينَ",
        "verse_169": "لَكُنَّا عِبَادَ اللَّهِ الْمُخْلَصِينَ",
        "verse_170": "فَكَفَرُوا بِهِ ۖ فَسَوْفَ يَعْلَمُونَ",
        "verse_171": "وَلَقَدْ سَبَقَتْ كَلِمَتُنَا لِعِبَادِنَا الْمُرْسَلِينَ",
        "verse_172": "إِنَّهُمْ لَهُمُ الْمَنْصُورُونَ",
        "verse_173": "وَإِنَّ جُنْدَنَا لَهُمُ الْغَالِبُونَ",
        "verse_174": "فَتَوَلَّ عَنْهُمْ حَتَّىٰ حِينٍ",
        "verse_175": "وَأَبْصِرْهُمْ فَسَوْفَ يُبْصِرُونَ",
        "verse_176": "أَفَبِعَذَابِنَا يَسْتَعْجِلُونَ",
        "verse_177": "فَإِذَا نَزَلَ بِسَاحَتِهِمْ فَسَاءَ صَبَاحُ الْمُنْذَرِينَ",
        "verse_178": "وَتَوَلَّ عَنْهُمْ حَتَّىٰ حِينٍ",
        "verse_179": "وَأَبْصِرْ فَسَوْفَ يُبْصِرُونَ",
        "verse_180": "سُبْحَانَ رَبِّكَ رَبِّ الْعِزَّةِ عَمَّا يَصِفُونَ",
        "verse_181": "وَسَلَامٌ عَلَى الْمُرْسَلِينَ",
        "verse_182": "وَالْحَمْدُ لِلَّهِ رَبِّ الْعَالَمِينَ"
    },
