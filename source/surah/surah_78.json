{
    "index": "078",
    "name": "an-Naba'",
    "verse": {
        "verse_0": "بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ",
        "verse_1": "عَمَّ يَتَسَاءَلُونَ",
        "verse_2": "عَنِ النَّبَإِ الْعَظِيمِ",
        "verse_3": "الَّذِي هُمْ فِيهِ مُخْتَلِفُونَ",
        "verse_4": "كَلَّا سَيَعْلَمُونَ",
        "verse_5": "ثُمَّ كَلَّا سَيَعْلَمُونَ",
        "verse_6": "أَلَمْ نَجْعَلِ الْأَرْضَ مِهَادًا",
        "verse_7": "وَالْجِبَالَ أَوْتَادًا",
        "verse_8": "وَخَلَقْنَاكُمْ أَزْوَاجًا",
        "verse_9": "وَجَعَلْنَا نَوْمَكُمْ سُبَاتًا",
        "verse_10": "وَجَعَلْنَا اللَّيْلَ لِبَاسًا",
        "verse_11": "وَجَعَلْنَا النَّهَارَ مَعَاشًا",
        "verse_12": "وَبَنَيْنَا فَوْقَكُمْ سَبْعًا شِدَادًا",
        "verse_13": "وَجَعَلْنَا سِرَاجًا وَهَّاجًا",
        "verse_14": "وَأَنْزَلْنَا مِنَ الْمُعْصِرَاتِ مَاءً ثَجَّاجًا",
        "verse_15": "لِنُخْرِجَ بِهِ حَبًّا وَنَبَاتًا",
        "verse_16": "وَجَنَّاتٍ أَلْفَافًا",
        "verse_17": "إِنَّ يَوْمَ الْفَصْلِ كَانَ مِيقَاتًا",
        "verse_18": "يَوْمَ يُنْفَخُ فِي الصُّورِ فَتَأْتُونَ أَفْوَاجًا",
        "verse_19": "وَفُتِحَتِ السَّمَاءُ فَكَانَتْ أَبْوَابًا",
        "verse_20": "وَسُيِّرَتِ الْجِبَالُ فَكَانَتْ سَرَابًا",
        "verse_21": "إِنَّ جَهَنَّمَ كَانَتْ مِرْصَادًا",
        "verse_22": "لِلطَّاغِينَ مَآبًا",
        "verse_23": "لَابِثِينَ فِيهَا أَحْقَابًا",
        "verse_24": "لَا يَذُوقُونَ فِيهَا بَرْدًا وَلَا شَرَابًا",
        "verse_25": "إِلَّا حَمِيمًا وَغَسَّاقًا",
        "verse_26": "جَزَاءً وِفَاقًا",
        "verse_27": "إِنَّهُمْ كَانُوا لَا يَرْجُونَ حِسَابًا",
        "verse_28": "وَكَذَّبُوا بِآيَاتِنَا كِذَّابًا",
        "verse_29": "وَكُلَّ شَيْءٍ أَحْصَيْنَاهُ كِتَابًا",
        "verse_30": "فَذُوقُوا فَلَنْ نَزِيدَكُمْ إِلَّا عَذَابًا",
        "verse_31": "إِنَّ لِلْمُتَّقِينَ مَفَازًا",
        "verse_32": "حَدَائِقَ وَأَعْنَابًا",
        "verse_33": "وَكَوَاعِبَ أَتْرَابًا",
        "verse_34": "وَكَأْسًا دِهَاقًا",
        "verse_35": "لَا يَسْمَعُونَ فِيهَا لَغْوًا وَلَا كِذَّابًا",
        "verse_36": "جَزَاءً مِنْ رَبِّكَ عَطَاءً حِسَابًا",
        "verse_37": "رَبِّ السَّمَاوَاتِ وَالْأَرْضِ وَمَا بَيْنَهُمَا الرَّحْمَٰنِ ۖ لَا يَمْلِكُونَ مِنْهُ خِطَابًا",
        "verse_38": "يَوْمَ يَقُومُ الرُّوحُ وَالْمَلَائِكَةُ صَفًّا ۖ لَا يَتَكَلَّمُونَ إِلَّا مَنْ أَذِنَ لَهُ الرَّحْمَٰنُ وَقَالَ صَوَابًا",
        "verse_39": "ذَٰلِكَ الْيَوْمُ الْحَقُّ ۖ فَمَنْ شَاءَ اتَّخَذَ إِلَىٰ رَبِّهِ مَآبًا",
        "verse_40": "إِنَّا أَنْذَرْنَاكُمْ عَذَابًا قَرِيبًا يَوْمَ يَنْظُرُ الْمَرْءُ مَا قَدَّمَتْ يَدَاهُ وَيَقُولُ الْكَافِرُ يَا لَيْتَنِي كُنْتُ تُرَابًا"
    },
