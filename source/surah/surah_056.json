{
    "index": "056",
    "name": "al-Waqi'ah",
    "verse": {
        "verse_0": "بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ",
        "verse_1": "إِذَا وَقَعَتِ ٱلْوَاقِعَةُ",
        "verse_2": "لَيْسَ لِوَقْعَتِهَا كَاذِبَةٌ",
        "verse_3": "خَافِضَةٌۭ رَّافِعَةٌ",
        "verse_4": "إِذَا رُجَّتِ ٱلْأَرْضُ رَجًّۭا",
        "verse_5": "وَبُسَّتِ ٱلْجِبَالُ بَسًّۭا",
        "verse_6": "فَكَانَتْ هَبَآءًۭ مُّنۢبَثًّۭا",
        "verse_7": "وَكُنتُمْ أَزْوَٰجًۭا ثَلَٰثَةًۭ",
        "verse_8": "فَأَصْحَٰبُ ٱلْمَيْمَنَةِ مَآ أَصْحَٰبُ ٱلْمَيْمَنَةِ",
        "verse_9": "وَأَصْحَٰبُ ٱلْمَشْـَٔمَةِ مَآ أَصْحَٰبُ ٱلْمَشْـَٔمَةِ",
        "verse_10": "وَٱلسَّٰبِقُونَ ٱلسَّٰبِقُونَ",
        "verse_11": "أُو۟لَٰٓئِكَ ٱلْمُقَرَّبُونَ",
        "verse_12": "فِى جَنَّٰتِ ٱلنَّعِيمِ",
        "verse_13": "ثُلَّةٌۭ مِّنَ ٱلْأَوَّلِينَ",
        "verse_14": "وَقَلِيلٌۭ مِّنَ ٱلْءَاخِرِينَ",
        "verse_15": "عَلَىٰ سُرُرٍۢ مَّوْضُونَةٍۢ",
        "verse_16": "مُّتَّكِـِٔينَ عَلَيْهَا مُتَقَٰبِلِينَ",
        "verse_17": "يَطُوفُ عَلَيْهِمْ وِلْدَٰنٌۭ مُّخَلَّدُونَ",
        "verse_18": "بِأَكْوَابٍۢ وَأَبَارِيقَ وَكَأْسٍۢ مِّن مَّعِينٍۢ",
        "verse_19": "لَّا يُصَدَّعُونَ عَنْهَا وَلَا يُنزِفُونَ",
        "verse_20": "وَفَٰكِهَةٍۢ مِّمَّا يَتَخَيَّرُونَ",
        "verse_21": "وَلَحْمِ طَيْرٍۢ مِّمَّا يَشْتَهُونَ",
        "verse_22": "وَحُورٌ عِينٌۭ",
        "verse_23": "كَأَمْثَٰلِ ٱللُّؤْلُؤِ ٱلْمَكْنُونِ",
        "verse_24": "جَزَآءًۢ بِمَا كَانُوا۟ يَعْمَلُونَ",
        "verse_25": "لَا يَسْمَعُونَ فِيهَا لَغْوًۭا وَلَا تَأْثِيمًا",
        "verse_26": "إِلَّا قِيلًۭا سَلَٰمًۭا سَلَٰمًۭا",
        "verse_27": "وَأَصْحَٰبُ ٱلْيَمِينِ مَآ أَصْحَٰبُ ٱلْيَمِينِ",
        "verse_28": "فِى سِدْرٍۢ مَّخْضُودٍۢ",
        "verse_29": "وَطَلْحٍۢ مَّنضُودٍۢ",
        "verse_30": "وَظِلٍّۢ مَّمْدُودٍۢ",
        "verse_31": "وَمَآءٍۢ مَّسْكُوبٍۢ",
        "verse_32": "وَفَٰكِهَةٍۢ كَثِيرَةٍۢ",
        "verse_33": "لَّا مَقْطُوعَةٍۢ وَلَا مَمْنُوعَةٍۢ",
        "verse_34": "وَفُرُشٍۢ مَّرْفُوعَةٍ",
        "verse_35": "إِنَّآ أَنشَأْنَٰهُنَّ إِنشَآءًۭ",
        "verse_36": "فَجَعَلْنَٰهُنَّ أَبْكَارًا",
        "verse_37": "عُرُبًا أَتْرَابًۭا",
        "verse_38": "لِّأَصْحَٰبِ ٱلْيَمِينِ",
        "verse_39": "ثُلَّةٌۭ مِّنَ ٱلْأَوَّلِينَ",
        "verse_40": "وَثُلَّةٌۭ مِّنَ ٱلْءَاخِرِينَ",
        "verse_41": "وَأَصْحَٰبُ ٱلشِّمَالِ مَآ أَصْحَٰبُ ٱلشِّمَالِ",
        "verse_42": "فِى سَمُومٍۢ وَحَمِيمٍۢ",
        "verse_43": "وَظِلٍّۢ مِّن يَحْمُومٍۢ",
        "verse_44": "لَّا بَارِدٍۢ وَلَا كَرِيمٍ",
        "verse_45": "إِنَّهُمْ كَانُوا۟ قَبْلَ ذَٰلِكَ مُتْرَفِينَ",
        "verse_46": "وَكَانُوا۟ يُصِرُّونَ عَلَى ٱلْحِنثِ ٱلْعَظِيمِ",
        "verse_47": "وَكَانُوا۟ يَقُولُونَ أَئِذَا مِتْنَا وَكُنَّا تُرَابًۭا وَعِظَٰمًا أَءِنَّا لَمَبْعُوثُونَ",
        "verse_48": "أَوَءَابَآؤُنَا ٱلْأَوَّلُونَ",
        "verse_49": "قُلْ إِنَّ ٱلْأَوَّلِينَ وَٱلْءَاخِرِينَ",
        "verse_50": "لَمَجْمُوعُونَ إِلَىٰ مِيقَٰتِ يَوْمٍۢ مَّعْلُومٍۢ",
        "verse_51": "ثُمَّ إِنَّكُمْ أَيُّهَا ٱلضَّآلُّونَ ٱلْمُكَذِّبُونَ",
        "verse_52": "لَءَاكِلُونَ مِن شَجَرٍۢ مِّن زَقُّومٍۢ",
        "verse_53": "فَمَالِـُٔونَ مِنْهَا ٱلْبُطُونَ",
        "verse_54": "فَشَٰرِبُونَ عَلَيْهِ مِنَ ٱلْحَمِيمِ",
        "verse_55": "فَشَٰرِبُونَ شُرْبَ ٱلْهِيمِ",
        "verse_56": "هَٰذَا نُزُلُهُمْ يَوْمَ ٱلدِّينِ",
        "verse_57": "نَحْنُ خَلَقْنَٰكُمْ فَلَوْلَا تُصَدِّقُونَ",
        "verse_58": "أَفَرَءَيْتُم مَّا تُمْنُونَ",
        "verse_59": "ءَأَنتُمْ تَخْلُقُونَهُۥٓ أَمْ نَحْنُ ٱلْخَٰلِقُونَ",
        "verse_60": "نَحْنُ قَدَّرْنَا بَيْنَكُمُ ٱلْمَوْتَ وَمَا نَحْنُ بِمَسْبُوقِينَ",
        "verse_61": "عَلَىٰٓ أَن نُّبَدِّلَ أَمْثَٰلَكُمْ وَنُنشِئَكُمْ فِى مَا لَا تَعْلَمُونَ",
        "verse_62": "وَلَقَدْ عَلِمْتُمُ ٱلنَّشْأَةَ ٱلْأُولَىٰ فَلَوْلَا تَذَكَّرُونَ",
        "verse_63": "أَفَرَءَيْتُم مَّا تَحْرُثُونَ",
        "verse_64": "ءَأَنتُمْ تَزْرَعُونَهُۥٓ أَمْ نَحْنُ ٱلزَّٰرِعُونَ",
        "verse_65": "لَوْ نَشَآءُ لَجَعَلْنَٰهُ حُطَٰمًۭا فَظَلْتُمْ تَفَكَّهُونَ",
        "verse_66": "إِنَّا لَمُغْرَمُونَ",
        "verse_67": "بَلْ نَحْنُ مَحْرُومُونَ",
        "verse_68": "أَفَرَءَيْتُمُ ٱلْمَآءَ ٱلَّذِى تَشْرَبُونَ",
        "verse_69": "ءَأَنتُمْ أَنزَلْتُمُوهُ مِنَ ٱلْمُزْنِ أَمْ نَحْنُ ٱلْمُنزِلُونَ",
        "verse_70": "لَوْ نَشَآءُ جَعَلْنَٰهُ أُجَاجًۭا فَلَوْلَا تَشْكُرُونَ",
        "verse_71": "أَفَرَءَيْتُمُ ٱلنَّارَ ٱلَّتِى تُورُونَ",
        "verse_72": "ءَأَنتُمْ أَنشَأْتُمْ شَجَرَتَهَآ أَمْ نَحْنُ ٱلْمُنشِـُٔونَ",
        "verse_73": "نَحْنُ جَعَلْنَٰهَا تَذْكِرَةًۭ وَمَتَٰعًۭا لِّلْمُقْوِينَ",
        "verse_74": "فَسَبِّحْ بِٱسْمِ رَبِّكَ ٱلْعَظِيمِ",
        "verse_75": "۞ فَلَآ أُقْسِمُ بِمَوَٰقِعِ ٱلنُّجُومِ",
        "verse_76": "وَإِنَّهُۥ لَقَسَمٌۭ لَّوْ تَعْلَمُونَ عَظِيمٌ",
        "verse_77": "إِنَّهُۥ لَقُرْءَانٌۭ كَرِيمٌۭ",
        "verse_78": "فِى كِتَٰبٍۢ مَّكْنُونٍۢ",
        "verse_79": "لَّا يَمَسُّهُۥٓ إِلَّا ٱلْمُطَهَّرُونَ",
        "verse_80": "تَنزِيلٌۭ مِّن رَّبِّ ٱلْعَٰلَمِينَ",
        "verse_81": "أَفَبِهَٰذَا ٱلْحَدِيثِ أَنتُم مُّدْهِنُونَ",
        "verse_82": "وَتَجْعَلُونَ رِزْقَكُمْ أَنَّكُمْ تُكَذِّبُونَ",
        "verse_83": "فَلَوْلَآ إِذَا بَلَغَتِ ٱلْحُلْقُومَ",
        "verse_84": "وَأَنتُمْ حِينَئِذٍۢ تَنظُرُونَ",
        "verse_85": "وَنَحْنُ أَقْرَبُ إِلَيْهِ مِنكُمْ وَلَٰكِن لَّا تُبْصِرُونَ",
        "verse_86": "فَلَوْلَآ إِن كُنتُمْ غَيْرَ مَدِينِينَ",
        "verse_87": "تَرْجِعُونَهَآ إِن كُنتُمْ صَٰدِقِينَ",
        "verse_88": "فَأَمَّآ إِن كَانَ مِنَ ٱلْمُقَرَّبِينَ",
        "verse_89": "فَرَوْحٌۭ وَرَيْحَانٌۭ وَجَنَّتُ نَعِيمٍۢ",
        "verse_90": "وَأَمَّآ إِن كَانَ مِنْ أَصْحَٰبِ ٱلْيَمِينِ",
        "verse_91": "فَسَلَٰمٌۭ لَّكَ مِنْ أَصْحَٰبِ ٱلْيَمِينِ",
        "verse_92": "وَأَمَّآ إِن كَانَ مِنَ ٱلْمُكَذِّبِينَ ٱلضَّآلِّينَ",
        "verse_93": "فَنُزُلٌۭ مِّنْ حَمِيمٍۢ",
        "verse_94": "وَتَصْلِيَةُ جَحِيمٍ",
        "verse_95": "إِنَّ هَٰذَا لَهُوَ حَقُّ ٱلْيَقِينِ",
        "verse_96": "فَسَبِّحْ بِٱسْمِ رَبِّكَ ٱلْعَظِيمِ"
    },
