{
    "index": "079",
    "name": "an-Nazi'at",
    "verse": {
        "verse_0": "بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ",
        "verse_1": "وَٱلنَّٰزِعَٰتِ غَرْقًۭا",
        "verse_2": "وَٱلنَّٰشِطَٰتِ نَشْطًۭا",
        "verse_3": "وَٱلسَّٰبِحَٰتِ سَبْحًۭا",
        "verse_4": "فَٱلسَّٰبِقَٰتِ سَبْقًۭا",
        "verse_5": "فَٱلْمُدَبِّرَٰتِ أَمْرًۭا",
        "verse_6": "يَوْمَ تَرْجُفُ ٱلرَّاجِفَةُ",
        "verse_7": "تَتْبَعُهَا ٱلرَّادِفَةُ",
        "verse_8": "قُلُوبٌۭ يَوْمَئِذٍۢ وَاجِفَةٌ",
        "verse_9": "أَبْصَٰرُهَا خَٰشِعَةٌۭ",
        "verse_10": "يَقُولُونَ أَءِنَّا لَمَرْدُودُونَ فِى ٱلْحَافِرَةِ",
        "verse_11": "أَءِذَا كُنَّا عِظَٰمًۭا نَّخِرَةًۭ",
        "verse_12": "قَالُوا۟ تِلْكَ إِذًۭا كَرَّةٌ خَاسِرَةٌۭ",
        "verse_13": "فَإِنَّمَا هِىَ زَجْرَةٌۭ وَٰحِدَةٌۭ",
        "verse_14": "فَإِذَا هُم بِٱلسَّاهِرَةِ",
        "verse_15": "هَلْ أَتَىٰكَ حَدِيثُ مُوسَىٰٓ",
        "verse_16": "إِذْ نَادَىٰهُ رَبُّهُۥ بِٱلْوَادِ ٱلْمُقَدَّسِ طُوًى",
        "verse_17": "ٱذْهَبْ إِلَىٰ فِرْعَوْنَ إِنَّهُۥ طَغَىٰ",
        "verse_18": "فَقُلْ هَل لَّكَ إِلَىٰٓ أَن تَزَكَّىٰ",
        "verse_19": "وَأَهْدِيَكَ إِلَىٰ رَبِّكَ فَتَخْشَىٰ",
        "verse_20": "فَأَرَىٰهُ ٱلْءَايَةَ ٱلْكُبْرَىٰ",
        "verse_21": "فَكَذَّبَ وَعَصَىٰ",
        "verse_22": "ثُمَّ أَدْبَرَ يَسْعَىٰ",
        "verse_23": "فَحَشَرَ فَنَادَىٰ",
        "verse_24": "فَقَالَ أَنَا۠ رَبُّكُمُ ٱلْأَعْلَىٰ",
        "verse_25": "فَأَخَذَهُ ٱللَّهُ نَكَالَ ٱلْءَاخِرَةِ وَٱلْأُولَىٰٓ",
        "verse_26": "إِنَّ فِى ذَٰلِكَ لَعِبْرَةًۭ لِّمَن يَخْشَىٰٓ",
        "verse_27": "ءَأَنتُمْ أَشَدُّ خَلْقًا أَمِ ٱلسَّمَآءُ ۚ بَنَىٰهَا",
        "verse_28": "رَفَعَ سَمْكَهَا فَسَوَّىٰهَا",
        "verse_29": "وَأَغْطَشَ لَيْلَهَا وَأَخْرَجَ ضُحَىٰهَا",
        "verse_30": "وَٱلْأَرْضَ بَعْدَ ذَٰلِكَ دَحَىٰهَآ",
        "verse_31": "أَخْرَجَ مِنْهَا مَآءَهَا وَمَرْعَىٰهَا",
        "verse_32": "وَٱلْجِبَالَ أَرْسَىٰهَا",
        "verse_33": "مَتَٰعًۭا لَّكُمْ وَلِأَنْعَٰمِكُمْ",
        "verse_34": "فَإِذَا جَآءَتِ ٱلطَّآمَّةُ ٱلْكُبْرَىٰ",
        "verse_35": "يَوْمَ يَتَذَكَّرُ ٱلْإِنسَٰنُ مَا سَعَىٰ",
        "verse_36": "وَبُرِّزَتِ ٱلْجَحِيمُ لِمَن يَرَىٰ",
        "verse_37": "فَأَمَّا مَن طَغَىٰ",
        "verse_38": "وَءَاثَرَ ٱلْحَيَوٰةَ ٱلدُّنْيَا",
        "verse_39": "فَإِنَّ ٱلْجَحِيمَ هِىَ ٱلْمَأْوَىٰ",
        "verse_40": "وَأَمَّا مَنْ خَافَ مَقَامَ رَبِّهِۦ وَنَهَى ٱلنَّفْسَ عَنِ ٱلْهَوَىٰ",
        "verse_41": "فَإِنَّ ٱلْجَنَّةَ هِىَ ٱلْمَأْوَىٰ",
        "verse_42": "يَسْـَٔلُونَكَ عَنِ ٱلسَّاعَةِ أَيَّانَ مُرْسَىٰهَا",
        "verse_43": "فِيمَ أَنتَ مِن ذِكْرَىٰهَآ",
        "verse_44": "إِلَىٰ رَبِّكَ مُنتَهَىٰهَآ",
        "verse_45": "إِنَّمَآ أَنتَ مُنذِرُ مَن يَخْشَىٰهَا",
        "verse_46": "كَأَنَّهُمْ يَوْمَ يَرَوْنَهَا لَمْ يَلْبَثُوٓا۟ إِلَّا عَشِيَّةً أَوْ ضُحَىٰهَا"
    },
